<% matches = { notice: 'success', alert: 'danger' } %>

<% flash.each do |type, msg| %>
  <div class="alert alert-dismissible fade show w-25 text-light fixed-bottom <%= "alert-#{matches[type.to_sym]}" %>" role="alert">
    <%= msg %>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
