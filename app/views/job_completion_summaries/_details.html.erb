<div class="col-md-7">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="card-title mb-0">Details</h5>
    </div>
    <div class="card-body">
      <% if @job_completion_summary.job_completions.any? %>
        <div class="accordion" id="completionsAccordion">
          <% @job_completion_summary.job_completions.order(last_completed_at: :desc).each_with_index do |completion, index| %>
            <div class="accordion-item">
              <h2 class="accordion-header" id="heading<%= index %>">
                <button class="accordion-button <%= 'collapsed' unless index.zero? %>"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#collapse<%= index %>"
                        aria-expanded="<%= index.zero? ? 'true' : 'false' %>"
                        aria-controls="collapse<%= index %>">
                  <div class="d-flex justify-content-between align-items-center w-100 me-3">
                    <div>
                      <%= completion.message&.truncate(100) || 'No message' %>
                        <% if completion.details&.dig('stop_condition_name').present? || completion.completion_type.to_s == 'stop_condition' %>
                          <% if completion.details&.dig('stop_condition_type') == 'system' %>
                            <span class="badge bg-secondary ms-2">System stop condition</span>
                          <% else %>
                            <span class="badge ms-2" style="background-color: #0d6efd;">User defined stop condition</span>
                          <% end %>
                        <% else %>
                          <span class="badge bg-danger ms-2">Error</span>
                        <% end %>
                    </div>
                  </div>
                </button>
              </h2>
              <div id="collapse<%= index %>"
                   class="accordion-collapse collapse <%= 'show' if index.zero? %>"
                   aria-labelledby="heading<%= index %>"
                   data-bs-parent="#completionsAccordion">
                <div class="accordion-body">
                  <% if completion.details&.dig('stop_condition_name').present? || completion.completion_type.to_s == 'stop_condition' %>
                    <div class="row">
                      <div class="col-md-12">
                        <h6>Stop Condition Details:</h6>
                        <div class="bg-light p-3 rounded">
                          <p><strong>Name:</strong> <%= completion.details&.dig('stop_condition_name') %></p>
                          <p><strong>Content:</strong> <%= completion.details&.dig('stop_condition_content') %></p>
                            <p><strong>Type:</strong>
                              <% if completion.details&.dig('stop_condition_type') == 'system' %>
                                <span class="badge bg-secondary">System stop condition</span>
                              <% else %>
                                <span class="badge" style="background-color: #0d6efd;">User defined stop condition</span>
                              <% end %>
                            </p>
                        </div>
                      </div>
                    </div>
                  <% else %>
                    <div class="row">
                      <div class="col-md-12">
                        <h6>Error Details:</h6>
                        <div class="bg-light p-3 rounded">
                          <p><strong>Origin:</strong> <%= completion.details&.dig('origin') || 'Unknown' %></p>
                          <p><strong>Job:</strong> <%= @job_completion_summary.source_name %></p>
                          <% if completion.stack_trace.present? %>
                            <p><strong>Stack Trace:</strong></p>
                            <pre class="bg-dark text-light p-2 rounded"><%= completion.stack_trace.is_a?(Array) ? completion.stack_trace.join("\n") : completion.stack_trace %></pre>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                  <% if completion.details.present? %>
                    <div class="row mt-3">
                      <div class="col-md-12">
                        <h6>Additional Details:</h6>
                        <pre class="bg-light p-3 rounded">
                          <% begin %>
                            <%= JSON.pretty_generate(completion.details) %>
                          <% rescue %>
                            <%= completion.details.to_s %>
                          <% end %>
                        </pre>
                      </div>
                    </div>
                  <% end %>
                  <% if completion.context.present? %>
                    <div class="row mt-3">
                      <div class="col-md-12">
                        <h6>Context:</h6>
                        <pre class="bg-light p-3 rounded">
                          <% begin %>
                            <%= JSON.pretty_generate(completion.context) %>
                          <% rescue %>
                            <%= completion.context.to_s %>
                          <% end %>
                        </pre>
                      </div>
                    </div>
                  <% end %>
                  <div class="row mt-3">
                    <div class="col-md-6">
                      <strong>Occurred At:</strong>
                      <% if completion.last_completed_at.present? %>
                        <%= completion.last_completed_at.strftime('%Y-%m-%d %H:%M:%S') %>
                      <% elsif completion.created_at.present? %>
                        <%= completion.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
                      <% else %>
                        Unknown time
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-4">
          <i class="bi bi-info-circle text-info" style="font-size: 2rem;"></i>
          <p class="mt-2 text-muted">No completion details available.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
