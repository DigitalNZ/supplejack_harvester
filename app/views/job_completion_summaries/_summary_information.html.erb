<div class="col-md-5">
  <div class="card">
    <div class="card-header">
      <h5 class="card-title mb-0">Summary Information</h5>
    </div>
    <div class="card-body">
      <dl class="row">

        <dt class="col-sm-4">Pipeline Name:</dt>
        <dd class="col-sm-8">
          <code><%= @job_completion_summary.pipeline_name %></code>
        </dd>

        <dt class="col-sm-4">Total:</dt>
        <dd class="col-sm-8">
          <span class="badge bg-warning text-dark">
            <%= @job_completion_summary.completion_count %>
          </span>
        </dd>

        <dt class="col-sm-4">Last Occurred:</dt>
        <dd class="col-sm-8">
          <small class="text-muted">
            <%= @job_completion_summary.last_completed_at&.strftime('%Y-%m-%d %H:%M:%S') || 'N/A' %>
          </small>
        </dd>
      </dl>
    </div>
  </div>

  <div class="card mt-3">
    <div class="card-body text-center">
      <%= link_to 'Back to Job Completion Summary',
                  job_completion_summaries_path,
                  class: 'btn btn-outline-primary' %>
    </div>
  </div>
</div>
