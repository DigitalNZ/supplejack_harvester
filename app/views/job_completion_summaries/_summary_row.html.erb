<tr>
  <td>
    <strong><%= job_completion_summary.pipeline_name %></strong>
  </td>
  <td>
    <strong><%= job_completion_summary.definition_name %></strong>
  </td>
  <td>
    <strong><%= job_completion_summary.process_type.humanize %></strong>
  </td>
  <td>
    <% if job_completion_summary.completion_type == 'stop_condition' %>
      <% if job_completion_summary.job_completions.first&.details&.dig('stop_condition_type') == 'system' %>
        <span class="badge badge-stop-condition me-1">System stop condition</span>
      <% else %>
        <span class="badge badge-stop-condition me-1">User defined stop condition</span>
      <% end %>
    <% else %>
      <span class="badge bg-danger me-1">Error</span>
    <% end %>
  </td>
  <td>
    <span class="badge bg-warning text-dark">
      <%= job_completion_summary.completion_count %>
    </span>
  </td>
  <td>
    <small class="text-muted">
      <%= job_completion_summary.updated_at&.strftime('%Y-%m-%d %H:%M') || 'N/A' %>
    </small>
  </td>
  <td>
    <%= link_to 'View Details',
                job_completion_summary_path(job_completion_summary),
                class: 'btn btn-sm btn-outline-primary' %>
  </td>
</tr>
