<tr>
  <td>
    <strong><%= job_completion_summary.pipeline_name %></strong>
  </td>
  <td>
    <strong><%= job_completion_summary.process_type.humanize %></strong>
  </td>
  <td>
    <% if job_completion_summary.job_completions.any? && job_completion_summary.job_errors.any? %>
      <span class="badge bg-primary me-1">Completions</span>
      <span class="badge bg-danger">Errors</span>
    <% elsif job_completion_summary.job_completions.any? %>
      <span class="badge bg-primary">Completions</span>
    <% elsif job_completion_summary.job_errors.any? %>
      <span class="badge bg-danger">Errors</span>
    <% else %>
      <span class="badge bg-secondary">None</span>
    <% end %>
  </td>
  <td>
    <small class="text-muted">
      <%= job_completion_summary.updated_at&.strftime('%Y-%m-%d %H:%M') || 'N/A' %>
    </small>
  </td>
  <td>
    <%= link_to 'View Details',
                job_completion_summary_path(job_completion_summary),
                class: 'btn btn-sm btn-outline-primary' %>
  </td>
</tr>
