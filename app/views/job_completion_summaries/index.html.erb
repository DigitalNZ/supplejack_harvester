<%= content_for(:title) { 'Job Completion Summary' } %>

<%= content_for(:header) do %>
  <div class='float-start'>
    <h1>Job Completion Summary</h1>
    <p>View and manage job completion summary</p>
  </div>
  <div class='clearfix'></div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Job completion summary</h5>
        <span class="badge bg-secondary"><%= @job_completion_summaries.total_count %> total</span>
      </div>
      <div class="card-body p-0">
        <% if @job_completion_summaries.any? %>
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th>Pipeline Name</th>
                  <th>Definition Name</th>
                  <th>Process Type</th>
                  <th>Completion Type</th>
                  <th>Count</th>
                  <th>Last Occurred</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @job_completion_summaries.each do |error_summary| %>
                  <%= render 'summary_row', error_summary: error_summary %>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-5">
            <i class="bi bi-check-circle text-success"></i>
            <h4 class="mt-3">No completion summary found</h4>
            <p class="text-muted">There are no summaries matching your criteria.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/conditional_pagination', items: @job_completion_summaries %>
