<div class="card">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover" aria-describedby="job-details-caption">
        <caption id="job-details-caption" class="visually-hidden">
          Details for this pipeline job
        </caption>

        <thead class="visually-hidden">
          <tr>
            <th scope="col">Property</th>
            <th scope="col">Value</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <th scope="row">Run by</th>
            <td><%= job_launched_by_label(pipeline_job) %></td>
          </tr>
          <tr>
            <th scope="row">Status</th>
            <td>
              <span class="visually-hidden">Status: </span>
              <%= job_status_badge(nil, pipeline_job) %>
            </td>
          </tr>
          <tr>
            <th scope="row">Transformation input</th>
            <td><%= job_transformation_input(pipeline_job) %></td>
          </tr>
          <tr>
            <th scope="row">Pages to transform</th>
            <td><%= pipeline_job.page_type.humanize %></td>
          </tr>
          <tr>
            <th scope="row">Destination</th>
            <td><%= pipeline_job.destination.name %></td>
          </tr>
          <tr>
            <th scope="row">Delete previous records</th>
            <td><%= pipeline_job.delete_previous_records ? 'Yes' : 'No' %></td>
          </tr>
          <tr>
            <th scope="row">Run enrichments concurrently</th>
            <td><%= pipeline_job.run_enrichment_concurrently ? 'Yes' : 'No' %></td>
          </tr>
          <tr>
            <th scope="row">Skip previously enriched</th>
            <td><%= pipeline_job.skip_previously_enriched ? 'Yes' : 'No' %></td>
          </tr>
          <tr>
            <th scope="row">Job priority</th>
            <td><%= job_priority_label(pipeline_job) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
