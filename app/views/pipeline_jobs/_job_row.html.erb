<tr>
  <% if show_pipeline_col %>
    <td><%= link_to job.pipeline.name, job.pipeline %></td>
  <% end %>
  <td>
    <%= link_to pipeline_harvest_definition_extraction_definition_extraction_job_detail_path(
          job.pipeline.id,
          report.harvest_definition.id,
          report.extraction_definition.id,
          report.harvest_job.extraction_job_id,
          job.id
        ) do %>
      <% if report.present? %>
        <%= report.harvest_job&.name %>
      <% else %>
        <%= HarvestDefinition.find(definition_id).name %>
      <% end %>
    <% end %>
  </td>
  <td class="d-inline-flex align-items-center gap-1">
    <span class="<%= job_badge_classes(report) %>">
      <%= job_status_label(report, job) %>
    </span>
    <%# Add the link to errors here %>
    <%# link_to '3', '/', class: 'badge text-bg-danger text-decoration-none' %>
  </td>
  <td><%= job_launched_by_label(job) %></td>
  <% if show_destination_col %>
    <td><%= job.destination.name %></td>
  <% end %>
  <td><%= job_started_at_label(report, job) %></td>
  <td class="text-end"><%= job_duration(report, format: :short) %></td>
  <td>
    <%= link_to number_to_delimited(report&.pages_extracted),
                pipeline_harvest_definition_extraction_definition_extraction_job_path(
                  job.pipeline.id,
                  report.harvest_definition.id,
                  report.extraction_definition.id,
                  report.harvest_job.extraction_job_id
                ) %>
  </td>
  <td><%= number_to_delimited(report&.records_transformed) %></td>
  <td><%= number_to_delimited(report&.records_loaded) %></td>
  <td><%= number_to_delimited(report&.records_rejected) %></td>
  <td><%= number_to_delimited(report&.records_deleted) %></td>
</tr>
