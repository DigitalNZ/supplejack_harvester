<%= content_for(:title) { "Editing #{@harvest_definition.name_in_database}" } %>

<%= content_for(:header) do %>
  <%= render 'shared/breadcrumb_nav' %>

  <h1 class='float-start'><%= @harvest_definition.name_in_database %></h1>

  <div class="float-end">
    <button type="submit" class="btn btn-primary" data-form="js-harvest-definition-form">
      Update <%= @harvest_definition.kind %>
    </button>

    <%= link_to 'Cancel', pipeline_path(@pipeline), class: 'btn btn-outline-danger' %>
  </div>

  <div class='clearfix'></div>
<% end %>

<%= render 'form' %>
