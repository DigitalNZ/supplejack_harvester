<%= render 'automation_templates/header',
           automation_template: @automation_template,
           last_automation_run: @last_automation_run %>

<div class="tab-content mt-4">
  <div class="tab-pane fade show active" id="details" role="tabpanel">
    <%= render 'automation_templates/template_steps',
               automation_template: @automation_template,
               step_templates: @step_templates,
               last_automation_run: @last_automation_run %>
  </div>

  <!-- History Tab -->
  <div class="tab-pane fade" id="history" role="tabpanel">
    <%= render 'automation_templates/history_tab', automation_template: @automation_template %>
  </div>

  <!-- API Tab -->
  <div class="tab-pane fade" id="webhook" role="tabpanel">
    <%= render 'automation_templates/webhook_tab', automation_template: @automation_template %>
  </div>
</div>

<%= render 'automation_templates/modals',
           automation_template: @automation_template,
           step_templates: @step_templates %>
