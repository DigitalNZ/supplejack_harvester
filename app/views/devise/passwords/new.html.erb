<%= content_for(:title) { 'Forgot your password?' } %>

<%= content_for :header do %>
  <h1 class="header__title">Forgot your password?</h1>

  <div class="clearfix"></div>
<% end %>

<div class="row">
  <div class="col-sm-12 col-md-6">
    <%= vertical_form_with(model: resource, as: resource_name, url: password_path(resource_name), method: :post) do |f| %>
      <div class="card">
        <div class="card-body">
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
          </div>

          <div class="actions">
            <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
          </div>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>

  </div>
</div>
