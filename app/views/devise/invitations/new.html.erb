<%= content_for(:title) { 'Invite' } %>

<%= content_for :header do %>
  <h1 class="header__title"><%= t 'devise.invitations.new.header' %></h1>

  <div class="clearfix"></div>
<% end %>

<div class="row">
  <div class="col-sm-12 col-md-6">
    <%= vertical_form_with(model: resource, as: resource_name, url: invitation_path(resource_name),
                           html: { method: :post }) do |f| %>
      <div class="card">
        <div class="card-body">
          <div class="mb-3">
            <%= f.label :username, class: 'form-label' %>
            <%= f.text_field :username, required: true, class: 'form-control' %>
          </div>
          <div class="mb-3">
            <%= f.label :email, class: 'form-label' %>
            <%= f.email_field :email, required: true, class: 'form-control' %>
          </div>

          <%= f.submit t('devise.invitations.new.submit_button'), class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
