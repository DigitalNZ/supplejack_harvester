<%= content_for(:title) { 'Sign in' } %>

<%= content_for :header do %>
  <h1 class="header__title">Resend unlock instructions</h1>

  <div class="clearfix"></div>
<% end %>

<div class="row">
  <div class="col-sm-12 col-md-6">
    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <div class="card">
        <div class="card-body">
          <div class="mb-3">
            <p><%= f.label :email, class: 'form-label' %></p>
            <p><%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', required: true %></p>
          </div>

          <div class="actions">
            <%= f.submit 'Resend unlock instructions', class: 'btn btn-primary' %>
          </div>
        <% end %>

        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</div>