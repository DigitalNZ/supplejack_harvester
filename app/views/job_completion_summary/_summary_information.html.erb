<div class="col-md-5">
  <div class="card">
    <div class="card-header">
      <h5 class="card-title mb-0">Summary Information</h5>
    </div>
    <div class="card-body">
      <dl class="row">
        <dt class="col-sm-4">Extraction ID:</dt>
        <dd class="col-sm-8">
          <code><%= @job_completion_summary.extraction_id %></code>
        </dd>

        <dt class="col-sm-4">Extraction Name:</dt>
        <dd class="col-sm-8">
          <strong><%= @job_completion_summary.extraction_name %></strong>
        </dd>

        <dt class="col-sm-4">Type:</dt>
        <dd class="col-sm-8">
          <% if @job_completion_summary.stop_condition? %>
            <% if @job_completion_summary.system_stop_condition? %>
              <span class="badge" style="background-color: #0d6efd;">System Stop Condition</span>
            <% else %>
              <span class="badge" style="background-color: #0d6efd;">User Stop Condition</span>
            <% end %>
          <% else %>
            <span class="badge bg-danger"><%= @job_completion_summary.completion_type.humanize %></span>
          <% end %>
        </dd>

        <dt class="col-sm-4">Total:</dt>
        <dd class="col-sm-8">
          <span class="badge bg-warning text-dark">
            <%= @job_completion_summary.completion_count %>
          </span>
        </dd>

        <dt class="col-sm-4">Last Occurred:</dt>
        <dd class="col-sm-8">
          <small class="text-muted">
            <%= @job_completion_summary.last_occurred_at&.strftime('%Y-%m-%d %H:%M:%S') || 'N/A' %>
          </small>
        </dd>
      </dl>
    </div>
  </div>

  <div class="card mt-3">
    <div class="card-body text-center">
      <%= link_to 'Back to Job Completion Summary',
                  job_completion_summary_index_path,
                  class: 'btn btn-outline-primary' %>
    </div>
  </div>
</div>
