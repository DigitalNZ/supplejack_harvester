<tr>
  <td>
    <code><%= error_summary.extraction_id %></code>
  </td>
  <td>
    <strong><%= error_summary.extraction_name %></strong>
  </td>
  <td>
    <% if error_summary.stop_condition? %>
      <% if error_summary.system_stop_condition? %>
        <span class="badge" style="background-color: #0d6efd;">System Stop Condition</span>
      <% else %>
        <span class="badge" style="background-color: #0d6efd;">User Stop Condition</span>
      <% end %>
    <% else %>
           <span class="badge bg-danger"><%= error_summary.completion_type.humanize %></span>
    <% end %>
  </td>
  <td>
    <span class="badge bg-warning text-dark">
      <%= error_summary.completion_count %>
    </span>
  </td>
  <td>
    <small class="text-muted">
      <%= error_summary.last_occurred_at&.strftime('%Y-%m-%d %H:%M') || 'N/A' %>
    </small>
  </td>
  <td>
    <%= link_to 'View Details',
                job_completion_summary_path(error_summary),
                class: 'btn btn-sm btn-outline-primary' %>
  </td>
</tr>
